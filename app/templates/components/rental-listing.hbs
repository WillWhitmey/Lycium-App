{{yield}}
<article class="listing">
  <h3 class="message">{{rental.commit.message}}</h3>
  <div class="detail owner">
    <span>Name:</span> {{rental.commit.author.name}}
  </div>
  <div class="detail type">
    <span>Application:</span> {{rental.commit.application}}
  </div>
  <br>
  <button class="button" {{action 'toggleImageSize'}} class="image {{if isWide "wide"}}">
    Details
  </button>
</article>
